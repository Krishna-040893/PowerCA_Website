# =====================================================
# PowerCA Environment Variables Configuration
# =====================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control
# =====================================================

# Database Configuration (Supabase)
# ----------------------
# Get from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL="your-supabase-project-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# For SQLite (development - alternative):
# DATABASE_URL="file:./dev.db"

# For PostgreSQL (production - alternative):
# DATABASE_URL="postgresql://username:password@localhost:5432/powerca_db"

# NextAuth Configuration
# ----------------------
# Generate secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3009"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Razorpay Payment Gateway
# ------------------------
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-webhook-secret"

# Email Service (Resend)
# ----------------------
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Google Analytics
# ----------------
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Application URLs
# ----------------
NEXT_PUBLIC_APP_URL="http://localhost:3009"

# Environment Mode
# ----------------
NODE_ENV="development"

# =====================================================
# OPTIONAL SERVICES (Uncomment as needed)
# =====================================================

# Cloud Storage (AWS S3)
# ----------------------
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="ap-south-1"
# AWS_S3_BUCKET="powerca-uploads"

# SMS Service (Twilio)
# --------------------
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# TWILIO_PHONE_NUMBER="+1234567890"

# WhatsApp Business API
# ---------------------
# WHATSAPP_API_KEY="your-whatsapp-api-key"
# WHATSAPP_PHONE_ID="your-whatsapp-phone-id"

# Error Tracking (Sentry)
# -----------------------
# SENTRY_DSN="your-sentry-dsn"

# Redis Cache
# -----------
# REDIS_URL="redis://localhost:6379"

# Custom SMTP (Alternative to Resend)
# ------------------------------------
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Google OAuth
# ------------
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft OAuth
# ---------------
# AZURE_AD_CLIENT_ID="your-azure-client-id"
# AZURE_AD_CLIENT_SECRET="your-azure-client-secret"
# AZURE_AD_TENANT_ID="your-azure-tenant-id"

# =====================================================
# PRODUCTION CHECKLIST
# =====================================================
# [ ] Generate secure NEXTAUTH_SECRET
# [ ] Update DATABASE_URL to PostgreSQL
# [ ] Configure Razorpay production keys
# [ ] Set up Resend with verified domain
# [ ] Update NEXTAUTH_URL to production domain
# [ ] Configure Google Analytics
# [ ] Set NODE_ENV to "production"
# [ ] Enable error tracking (Sentry)
# [ ] Configure backup storage (S3)
# =====================================================
# PowerCA Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env or .env.local files to version control

# Database (SQLite for development, PostgreSQL for production)
# For SQLite (development):
DATABASE_URL="file:./dev.db"
# For PostgreSQL (production):
# DATABASE_URL="postgresql://username:password@localhost:5432/powerca_db"

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3009"
NEXTAUTH_SECRET="your-nextauth-secret-here-generate-with-openssl"

# Razorpay Payment Gateway
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID="rzp_test_XXXXXXXXXX"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-webhook-secret"

# Email Service (Resend)
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_XXXXXXXXXXXXXXXXXX"
EMAIL_FROM="noreply@yourdomain.com"

# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3009"

# Supabase Configuration
# Get from: https://app.supabase.com/project/YOUR_PROJECT_ID/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Development/Production Mode
NODE_ENV="development"

# Admin Setup (for scripts only - DO NOT commit with real values)
# ADMIN_USERNAME="admin"
# ADMIN_PASSWORD="use-strong-password-here"
# ADMIN_EMAIL="admin@yourdomain.com"

# Optional: Cloud Storage (for file uploads)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="ap-south-1"
# AWS_S3_BUCKET="powerca-uploads"

# Optional: SMS Service (for OTP)
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# TWILIO_PHONE_NUMBER="+1234567890"

# Optional: WhatsApp Business API
# WHATSAPP_API_KEY="your-whatsapp-api-key"
# WHATSAPP_PHONE_ID="your-whatsapp-phone-id"

# Optional: Sentry Error Tracking
# SENTRY_DSN="your-sentry-dsn"

# Optional: Redis (for caching/sessions)
# REDIS_URL="redis://localhost:6379"

# Optional: Email Templates (if using custom SMTP instead of Resend)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Optional: Google OAuth (for social login)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Optional: Microsoft OAuth (for social login)
# AZURE_AD_CLIENT_ID="your-azure-client-id"
# AZURE_AD_CLIENT_SECRET="your-azure-client-secret"
# AZURE_AD_TENANT_ID="your-azure-tenant-id"

# HubSpot Integration
# Get from: https://app.hubspot.com/private-apps
HUBSPOT_PRIVATE_APP_TOKEN="your-hubspot-private-app-token"
# Get from: Settings > Account > API
NEXT_PUBLIC_HUBSPOT_PORTAL_ID="your-hubspot-portal-id"
